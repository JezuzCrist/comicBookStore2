<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ComicBookStore</title>
    <link rel="icon" href="@Url.Content("~/favicon.ico")" />

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" media="screen" />

    <link rel="stylesheet" href="~/Content/font-awesome-4.6.3/css/font-awesome.min.css" type="text/css" media="screen" />
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    
    <link rel="stylesheet" href="~/Content/css/main.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/home.css" type="text/css" media="screen" />
    
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("https://maps.googleapis.com/maps/api/js?key=AIzaSyDY_-Sbpc7dEyezG2jx_skos9uTQwGRnx8")"></script>
    @if (IsSectionDefined("Scripts"))
    {
    @RenderSection("Scripts", false)
}
</head>
<body>

    <div class="main">
        <div>
            <div class="navbar navbar-inverse navbar-fixed-top mainNavbar">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="#" class="pull-left">
                            <i id="storeLogo" class="fa fa-book" aria-hidden="true"></i>
                        </a>
                        @Html.ActionLink("ComicBookStore", "Home", "Home", new { area = "" }, new { @class = "navbar-brand storeLogoText" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav storeNav">
                            <li>@Html.ActionLink("Comics", "Search", "Comics")</li>
                            <li>@Html.ActionLink("Sellers", "Search", "Sellers")</li>
                            @if (Request.IsAuthenticated)
                            {
                            <li>@Html.ActionLink("Manage Comics", "Index", "Comics")</li>
                            <li>@Html.ActionLink("Manage Reviews", "Index", "Reviews")</li>
                            <li>@Html.ActionLink("Manage Sellers", "Index", "Sellers")</li>
                        }
                        <li>@Html.ActionLink("Contact", "Index", "Map")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
        <footer>
            <h3>&copy; @DateTime.Now.Year - ComicBookStore</h3>
            <nav>
                <a>@Html.ActionLink("Comics", "Search", "Comics")</a>
                <a>@Html.ActionLink("Sellers", "Search", "Sellers")</a>
                @if (Request.IsAuthenticated)
                {
                <a>@Html.ActionLink("Manage Comics", "Index", "Comics")</a>
                <a>@Html.ActionLink("Manage Reviews", "Index", "Reviews")</a>
                <a>@Html.ActionLink("Manage Sellers", "Index", "Sellers")</a>
            }
            <a>@Html.ActionLink("Contact", "Index", "Map")</a>
        </nav>
    </footer>
</div>

</body>
</html>
